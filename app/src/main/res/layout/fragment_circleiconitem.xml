<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.onlineshoppingmall.until.CircleImageView
        android:id="@+id/home_page_list_h_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/grid"
        app:layout_constraintBottom_toTopOf="@+id/home_page_list_h_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/home_logo1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/home_page_list_h_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/grid"
        android:layout_marginEnd="@dimen/grid"
        android:layout_marginBottom="@dimen/grid"
        android:textSize="@dimen/small_word_prompt"
        app:layout_constraintBottom_toBottomOf="@+id/home_page_list_h_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_page_list_h_icon"
        tools:text="生活超市" />

</android.support.constraint.ConstraintLayout>
