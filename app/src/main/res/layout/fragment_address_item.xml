<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/address_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/leave_blank"
        android:textColor="@color/black"
        android:textSize="@dimen/appbar_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="戴俊明" />

    <!--<android.support.v7.widget.AppCompatTextView-->
    <!--android:id="@+id/address_phone"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginStart="@dimen/leave_blank"-->
    <!--android:textColor="@color/black"-->
    <!--android:textSize="@dimen/appbar_text"-->
    <!--app:layout_constraintStart_toEndOf="@id/address_username"-->
    <!--app:layout_constraintTop_toTopOf="@id/address_username"-->
    <!--tools:text="13057081601" />-->

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/address_name"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/leave_blank"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/appbar_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_username"
        tools:text="111111111111111111111" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/leave_blank"
        android:background="@drawable/button_edge"
        android:text="编辑"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/appbar_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/address_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/leave_blank"
        android:background="@drawable/button_edge"
        android:text="删除"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/appbar_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_edit" />

</android.support.constraint.ConstraintLayout>
