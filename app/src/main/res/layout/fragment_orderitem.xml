<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/good_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="@dimen/leave_blank"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/good_name"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/leave_blank"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/good_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="goodsgoodsgoods" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/good_amount"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/leave_blank"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle"
            app:layout_constraintEnd_toEndOf="@id/good_name"
            app:layout_constraintTop_toBottomOf="@id/good_name"
            tools:text="goods" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
