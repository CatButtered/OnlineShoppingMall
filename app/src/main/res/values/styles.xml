<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="InputBoxStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">@dimen/leave_blank</item>
        <item name="android:layout_marginEnd">@dimen/leave_blank</item>
        <item name="android:layout_marginTop">@dimen/grid</item>
        <item name="android:layout_marginBottom">@dimen/grid</item>
        <item name="android:background">@drawable/input_box</item>
        <item name="android:paddingStart">@dimen/grid</item>
        <item name="android:paddingEnd">@dimen/grid</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>
</resources>
